generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id           String        @id @default(uuid())
  keycloakUserId String       @unique
  email        String        @unique
  name         String
  phoneNumber  String?
  address      String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]

  @@index([email])
  @@index([keycloakUserId])
  @@map("clients")
}

model Provider {
  id           String        @id @default(uuid())
  keycloakUserId String       @unique
  email        String        @unique
  name         String
  services     String[]
  phoneNumber  String?
  address      String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  slots        Slot[]

  @@index([email])
  @@index([keycloakUserId])
  @@map("providers")
}

model Slot {
  id           String       @id @default(uuid())
  providerId   String
  date         DateTime
  startTime    DateTime
  endTime      DateTime
  status       String       @default("AVAILABLE")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  appointments Appointment?
  provider     Provider     @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([providerId])
  @@index([date])
  @@index([startTime, endTime])
  @@index([status])
  @@map("slots")
}

model Appointment {
  id        String   @id @default(uuid())
  clientId  String
  slotId    String   @unique
  status    String   @default("CONFIRMED")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  slot      Slot     @relation(fields: [slotId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([slotId])
  @@index([status])
  @@map("appointments")
}
